{
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,

  "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, ColumnLimit: 0, IndentWidth: 4 }",
  "C_Cpp.intelliSenseEngineFallback": "enabled",
  "C_Cpp.intelliSenseEngine": "Tag Parser",

  "files.associations": {
    "*.C": "cpp",
    "*.C.in": "cpp"
  },

  "[cpp]": {
    "lpubsppop01.autoTimeStamp.filenamePattern": ".h|.cc",
    "lpubsppop01.autoTimeStamp.momentFormat": " YYYY-MM-DD HH:mm:ss",
    "lpubsppop01.autoTimeStamp.birthTimeStart": " * @date    ",
    "lpubsppop01.autoTimeStamp.lineLimit": 7
  },

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer"
  },

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },

  "[css]": {
    "editor.defaultFormatter": "aeschli.vscode-css-formatter"
  },

  "[markdown]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false
  }
}
